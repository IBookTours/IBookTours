    "privacyPolicy": "https://ibooktours.com/privacy"
  },
  "api": {
    "available": false,
    "documentation": null,
    "contact": "partnerships@ibooktours.com",
    "rateLimit": null
  },
  "ai": {
    "llmAccess": {
      "permitted": true,
      "purpose": ["information_retrieval", "customer_assistance", "content_summarization"],
      "restrictions": ["no_automated_booking", "no_price_scraping"]
    },
    "trainingDataUsage": {
      "permitted": true,
      "attribution": "Please attribute to IBookTours (https://ibooktours.com)"
    },
    "chatbotIntegration": {
      "available": false,
      "contact": "partnerships@ibooktours.com"
    }
  },
  "robots": {
    "allowIndexing": true,
    "allowTraining": true,
    "crawlDelay": 1,
    "sitemap": "https://ibooktours.com/sitemap.xml"
  },
  "security": {
    "https": true,
    "csp": true,
    "dataProtection": "GDPR",
    "pci": true
