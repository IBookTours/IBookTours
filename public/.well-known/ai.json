  "contact": {
    "email": "support@ibooktours.com",
    "website": "https://ibooktours.com/contact",
    "partnerships": "partnerships@ibooktours.com"
  },
  "services": {
    "primary": [
      {
        "name": "Day Tours",
        "description": "Guided day trips to Albania's top destinations",
        "url": "/tours"
      },
      {
        "name": "Vacation Packages",
        "description": "Multi-day curated travel packages",
        "url": "/tours"
      },
      {
        "name": "Hotels",
        "description": "Handpicked accommodations across Albania",
        "url": "/hotels"
      },
      {
        "name": "Car Rental",
        "description": "Flexible vehicle rentals for self-guided exploration",
        "url": "/car-rental"
      }
    ],
    "upcoming": [
      "Airport Transfers",
      "Private Guides",
      "Event Planning"
    ]
  },
  "destinations": {
    "primary": ["Albania"],
    "featured": [
      "Tirana",
      "Saranda",
      "Berat",
      "Gjirokaster",
      "Ksamil",
      "Theth",
      "Vlora",
      "Shkoder"
